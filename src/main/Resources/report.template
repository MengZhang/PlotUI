                <td class="style12">$!farm.nucm_s</td>
                <td class="style12">$!farm.nlcm_s</td>
                <td class="style12">$!farm.epcp_s</td>
                <td class="style12">$!farm.escp_s</td>
                <td class="style12">$!farm.sraa_s</td>
                <td class="style12">$!farm.tmaxa_s</td>
                <td class="style12">$!farm.tmina_s</td>
                <td class="style12">$!farm.tavga_s</td>
                <td class="style12">$!farm.co2d_s</td>
            </tr>
            #end

        </table>
        #end

    </body>

</html>
