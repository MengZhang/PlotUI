                <td class="style2" style="width: 70px"><strong>ESCP_S</strong></td>
                <td class="style2" style="width: 70px"><strong>SRAA_S</strong></td>
                <td class="style2" style="width: 70px"><strong>TMAXA_S</strong></td>
                <td class="style2" style="width: 70px"><strong>TMINA_S</strong></td>
                <td class="style2" style="width: 70px"><strong>TAVGA_S</strong></td>
