        <table style="width: 100%" class="style4">
            <tr>
                <td class="style2" style="width: 70px"><strong>EXNAME</strong></td>
                <td class="style2" style="width: 70px"><strong>HWAH_S</strong></td>
                <td class="style2" style="width: 70px"><strong>CWAH_S</strong></td>
                <td class="style2" style="width: 70px"><strong>ADAT_S</strong></td>
                <td class="style2" style="width: 70px"><strong>MDAT_S</strong></td>
                <td class="style2" style="width: 70px"><strong>HADAT_S</strong></td>
                <td class="style2" style="width: 70px"><strong>LAIX_S</strong></td>
                <td class="style2" style="width: 70px"><strong>PRCP_S</strong></td>
                <td class="style2" style="width: 70px"><strong>ETCP_S</strong></td>
                <td class="style2" style="width: 70px"><strong>NUCM_S</strong></td>
