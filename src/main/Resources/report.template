                <td class="style11">$!farm.exname</td>
                <td class="style12">$!farm.hwah_s</td>
                <td class="style12">$!farm.cwah_s</td>
                <td class="style12">$!farm.adat_s</td>
                <td class="style12">$!farm.mdat_s</td>
                <td class="style12">$!farm.hadat_s</td>
                <td class="style12">$!farm.laix_s</td>
